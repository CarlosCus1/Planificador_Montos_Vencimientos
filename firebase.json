{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "runtime": "python311",
      "ignore": [
        "venv",
        ".venv",
        "__pycache__",
        ".git",
        ".gitignore",
        ".vscode",
        "firebase-debug.log",
        "*.log",
        "public",
        ".pytest_cache",
        "test_*.py",
        ".env"
      ],
      "runtimeOptions": {
        "timeoutSeconds": 120
      }
    }
  ],
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      }
    ]
  }
}
