rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Deny all reads and writes by default for security.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow anyone to read the list of holidays.
    // Writes should only be done by an admin tool or backend process.
    match /holidays/{holidayId} {
      allow read: if true;
    }

    // RUC cache should only be accessible by the backend.
    // The Admin SDK bypasses these rules, but this is for clarity and security.
    match /ruc_cache/{rucId} {
      allow read, write: if false;
    }
  }
}